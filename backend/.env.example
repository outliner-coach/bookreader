# OpenAI API Key for GPT-4o Vision
OPENAI_API_KEY=your_openai_api_key_here

# Server configuration
HOST=0.0.0.0
PORT=8000

# TTS Model configuration
TTS_MODEL_SIZE=0.6B  # Options: 0.6B, 1.7B

# OCR configuration (speed/quality)
OCR_MODEL=gpt-4o-mini
OCR_FALLBACK_MODEL=gpt-4o
OCR_MAX_TOKENS=1200

# Force TTS language/speaker (optional)
TTS_FORCE_LANGUAGE=english  # english | korean | empty
TTS_EN_SPEAKER=ryan
